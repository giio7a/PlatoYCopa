<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animación para contar hasta el número objetivo
        const countUpElements = document.querySelectorAll('.count-up');
        
        const animateCountUp = (el, target) => {
            const duration = 2000; // 2 segundos
            const frameDuration = 1000 / 60; // 60fps
            const totalFrames = Math.round(duration / frameDuration);
            let frame = 0;
            
            const counter = setInterval(() => {
                frame++;
                const progress = frame / totalFrames;
                const currentCount = Math.round(progress * target);
                
                if (progress < 1) {
                    el.textContent = currentCount;
                } else {
                    el.textContent = target;
                    clearInterval(counter);
                }
            }, frameDuration);
        };
        
        // Observer para iniciar la animación cuando el elemento es visible
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const target = parseInt(entry.target.getAttribute('data-count'), 10);
                    animateCountUp(entry.target, target);
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.3 });
        
        countUpElements.forEach(el => {
            observer.observe(el);
        });

        // Animación para tarjetas "Por qué elegirnos"
        const whyChooseCards = document.querySelectorAll('.why-choose-card');
        const cardObserver = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('animate-fadeIn');
                    }, index * 100);
                    cardObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        
        whyChooseCards.forEach(card => {
            card.style.opacity = 0;
            cardObserver.observe(card);
        });
        
        // Animación para miembros del equipo
        const teamMembers = document.querySelectorAll('.team-member');
        const teamObserver = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('animate-fadeIn');
                    }, index * 200);
                    teamObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        
        teamMembers.forEach(member => {
            member.style.opacity = 0;
            teamObserver.observe(member);
        });
        
        // Animación para tarjetas de objetivos
        const goalCards = document.querySelectorAll('.goal-card');
        const goalObserver = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('animate-fadeIn');
                    }, index * 150);
                    goalObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        
        goalCards.forEach(card => {
            card.style.opacity = 0;
            goalObserver.observe(card);
        });
        
        // Animación para tarjetas de logros
        const achievementCards = document.querySelectorAll('.achievement-card');
        const achievementObserver = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('animate-fadeIn');
                    }, index * 150);
                    achievementObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        
        achievementCards.forEach(card => {
            card.style.opacity = 0;
            achievementObserver.observe(card);
        });
    });
</script>
