<!-- Logros y Estadísticas -->
<section class="achievements-section">
    <div class="container">
        <h2 class="section-title text-center gradient-text mb-5">Nuestros Logros</h2>
        <div class="row g-4">
            {{#if stats.length}}
                {{#each stats}}
                    <div class="col-6 col-md-3">
                        <div class="achievement-card">
                            <div class="achievement-icon">
                                <i class="bi {{this.icono}}"></i>
                            </div>
                            <div class="achievement-number count-up" data-count="{{this.numero}}">0</div>
                            <div class="achievement-text">{{this.label}}</div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <!-- Fallback si no hay estadísticas en la base de datos -->
                <div class="col-6 col-md-3">
                    <div class="achievement-card">
                        <div class="achievement-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="achievement-number count-up" data-count="500">0</div>
                        <div class="achievement-text">Eventos Realizados</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="achievement-card">
                        <div class="achievement-icon">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="achievement-number count-up" data-count="120">0</div>
                        <div class="achievement-text">Meseros Profesionales</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="achievement-card">
                        <div class="achievement-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="achievement-number count-up" data-count="50">0</div>
                        <div class="achievement-text">Clientes Corporativos</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="achievement-card">
                        <div class="achievement-icon">
                            <i class="bi bi-emoji-smile"></i>
                        </div>
                        <div class="achievement-number count-up" data-count="98">0</div>
                        <div class="achievement-text">Clientes Satisfechos</div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</section>

<style>
    /* Variables globales */
    :root {
        --gold: #e5c76b;
        --gold-dark: #d5b75b;
        --gold-light: #f5d77b;
        --gold-border: rgba(229, 199, 107, 0.3);
        --gold-border-hover: rgba(229, 199, 107, 0.6);
        --black: #000000;
        --white: #ffffff;
        --white-dim: rgba(255, 255, 255, 0.8);
        --shadow-gold: 0 5px 15px rgba(229, 199, 107, 0.2);
        --border-radius: 8px;
        --transition-smooth: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    /* Estilos generales */
    .section-title {
        margin-bottom: 2.5rem;
        position: relative;
        display: inline-block;
    }
    
    .gradient-text {
        background: linear-gradient(to right, var(--gold), var(--gold-dark));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        display: inline-block;
    }
    
    /* Header */
    .header {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.9)), url('/img/header-bg.jpg');
        background-size: cover;
        background-position: center;
        padding: 100px 0;
        text-align: center;
        margin-bottom: 4rem;
    }
    
    .header-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
    .header h1 {
          font-size: clamp(3rem, 8vw, 6rem);
    line-height: 1;
    font-weight: 300;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }
    
    .header-subtitle {
        
        color: var(--white-dim);
         text-transform: uppercase;
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    font-weight: 300;
    letter-spacing: 0.2em;
    margin: 1rem 0;
    }
    
    /* Estilos para la sección About */
    .about-section {
        padding: 4rem 0;
        background: linear-gradient(145deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.95));
    }
    
    .about-card {
        background: linear-gradient(145deg, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.4));
        border: 1px solid var(--gold-border);
        border-radius: var(--border-radius);
        padding: 25px;
        height: 100%;
        transition: var(--transition-smooth);
        position: relative;
        overflow: hidden;
    }
    
    .about-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(to right, var(--gold), var(--gold-dark));
        opacity: 0;
        transition: opacity 0.4s ease;
    }
    
    .about-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--shadow-gold), 0 15px 35px rgba(0, 0, 0, 0.3);
        border-color: var(--gold-border-hover);
    }
    
    .about-card:hover::before {
        opacity: 1;
    }
    
    .about-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(145deg, var(--gold), var(--gold-dark));
        color: var(--black);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        transition: var(--transition-smooth);
    }
    
    .about-card:hover .about-icon {
        transform: scale(1.1) rotate(10deg);
        box-shadow: 0 6px 15px rgba(229, 199, 107, 0.4);
    }
    
    .about-title {
        color: var(--gold);
        font-size: 1.5rem;
        margin-bottom: 15px;
        font-weight: 500;
        position: relative;
        padding-bottom: 10px;
    }
    
    .about-title::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 40px;
        height: 2px;
        background-color: var(--gold);
        transition: width 0.3s ease;
    }
    
    .about-card:hover .about-title::after {
        width: 80px;
    }
    
    .about-text {
        color: var(--white-dim);
        font-size: 0.95rem;
        line-height: 1.6;
    }
    
    .value-item {
        color: var(--gold);
        font-weight: 500;
    }
    
    /* Sección Por qué elegirnos */
    .why-choose-section {
        padding: 5rem 0;
        background: linear-gradient(145deg, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.7)), url('/img/pattern-bg.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }
    
    .why-choose-card {
        background: linear-gradient(145deg, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.4));
        border: 1px solid var(--gold-border);
        border-radius: var(--border-radius);
        padding: 25px;
        height: 100%;
        transition: var(--transition-smooth);
        position: relative;
        overflow: hidden;
    }
    
    .why-choose-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--shadow-gold), 0 15px 35px rgba(0, 0, 0, 0.3);
        border-color: var(--gold-border-hover);
    }
    
    .why-choose-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(145deg, var(--gold), var(--gold-dark));
        color: var(--black);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        transition: var(--transition-smooth);
    }
    
    .why-choose-card:hover .why-choose-icon {
        transform: scale(1.1) rotate(10deg);
        box-shadow: 0 6px 15px rgba(229, 199, 107, 0.4);
    }
    
    .why-choose-card h4 {
        color: var(--gold);
        font-size: 1.2rem;
        margin-bottom: 15px;
        font-weight: 500;
    }
    
    .why-choose-card p {
        color: var(--white-dim);
        font-size: 0.95rem;
        line-height: 1.6;
    }
    
    /* Sección del equipo */
    .team-section {
        padding: 5rem 0;
        background: linear-gradient(145deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.95));
    }
    
    .team-member {
        background: linear-gradient(145deg, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.4));
        border: 1px solid var(--gold-border);
        border-radius: var(--border-radius);
        overflow: hidden;
        transition: var(--transition-smooth);
        height: 100%;
    }
    
    .team-member:hover {
        transform: translateY(-10px);
        box-shadow: var(--shadow-gold), 0 15px 35px rgba(0, 0, 0, 0.3);
        border-color: var(--gold-border-hover);
    }
    
    .team-member-image-wrapper {
        position: relative;
        padding-top: 20px;
        display: flex;
        justify-content: center;
    }
    
    .team-member-image {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        overflow: hidden;
        position: relative;
        border: 3px solid var(--gold);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    
    .team-member-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s ease;
    }
    
    .team-member:hover .team-member-image img {
        transform: scale(1.1);
    }
    
    .photo-placeholder {
        width: 100%;
        height: 100%;
        background-color: var(--gold-light);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--gold);
        font-size: 3rem;
    }
    
    .team-member-social {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        gap: 15px;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
        padding: 10px;
    }
    
    .team-member:hover .team-member-social {
        opacity: 1;
        transform: translateY(0);
    }
    
    .social-link {
        width: 36px;
        height: 36px;
        background: linear-gradient(145deg, var(--gold), var(--gold-dark));
        color: var(--black);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .social-link:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 10px rgba(229, 199, 107, 0.4);
        color: var(--black);
    }
    
    .team-member-info {
        padding: 20px;
