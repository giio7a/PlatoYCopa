<script>
document.addEventListener("DOMContentLoaded", () => {
  // DOM References
  const body = document.body;
  const mainNavbar = document.querySelector(".main-navbar");
  const searchTrigger = document.getElementById("searchTrigger");
  const searchOverlay = document.getElementById("searchOverlay");
  const searchClose = document.getElementById("searchClose");
  const searchInput = document.getElementById("searchInput");
  const searchBtn = document.getElementById("searchBtn");
  const searchSuggestions = document.getElementById("searchSuggestions");
  
  const mobileSearchTrigger = document.getElementById("mobileSearchTrigger");
  const mobileSearchOverlay = document.getElementById("mobileSearchOverlay");
  const mobileSearchClose = document.getElementById("mobileSearchClose");
  const mobileSearchInput = document.getElementById("mobileSearchInput");
  const mobileSearchBtn = document.getElementById("mobileSearchBtn");
  const mobileSearchSuggestions = document.getElementById("mobileSearchSuggestions");
  
  const sidePanel = document.getElementById("sidePanel");
  const panelOverlay = document.querySelector(".panel-overlay");
  const panelClose = document.querySelector(".panel-close");
  const menuAction = document.querySelector(".menu-action");
  const toggleSubmenuBtns = document.querySelectorAll(".toggle-submenu");
  
  // Scroll event for navbar
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      if (mainNavbar) mainNavbar.classList.add("scrolled");
      body.classList.add("scrolled");
    } else {
      if (mainNavbar) mainNavbar.classList.remove("scrolled");
      body.classList.remove("scrolled");
    }
  });
  
  // Desktop search functionality
  if (searchTrigger && searchOverlay && searchClose) {
    searchTrigger.addEventListener("click", () => {
      searchOverlay.classList.add("active");
      body.style.overflow = "hidden";
      setTimeout(() => {
        searchInput.focus();
      }, 300);
    });
    
    searchClose.addEventListener("click", () => {
      searchOverlay.classList.remove("active");
      body.style.overflow = "";
    });
    
    // Close search with Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && searchOverlay.classList.contains("active")) {
        searchOverlay.classList.remove("active");
        body.style.overflow = "";
      }
    });
  }
  
  // Mobile search functionality
  if (mobileSearchTrigger && mobileSearchOverlay && mobileSearchClose) {
    mobileSearchTrigger.addEventListener("click", () => {
      mobileSearchOverlay.classList.add("active");
      body.style.overflow = "hidden";
      setTimeout(() => {
        mobileSearchInput.focus();
      }, 300);
    });
    
    mobileSearchClose.addEventListener("click", () => {
      mobileSearchOverlay.classList.remove("active");
      body.style.overflow = "";
    });
    
    // Close mobile search with Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && mobileSearchOverlay.classList.contains("active")) {
        mobileSearchOverlay.classList.remove("active");
        body.style.overflow = "";
      }
    });
  }
  
  // Side panel functionality
  if (menuAction && sidePanel && panelClose && panelOverlay) {
    menuAction.addEventListener("click", () => {
      sidePanel.classList.add("active");
      body.style.overflow = "hidden";
    });
    
    panelClose.addEventListener("click", () => {
      sidePanel.classList.remove("active");
      body.style.overflow = "";
    });
    
    panelOverlay.addEventListener("click", () => {
      sidePanel.classList.remove("active");
      body.style.overflow = "";
    });
    
    // Close panel with Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && sidePanel.classList.contains("active")) {
        sidePanel.classList.remove("active");
        body.style.overflow = "";
      }
    });
  }
  
  // Toggle submenus in side panel
  toggleSubmenuBtns.forEach(btn => {
    btn.addEventListener("click", function() {
      this.classList.toggle("active");
      const submenu = this.nextElementSibling;
      submenu.classList.toggle("active");
      
      // Smooth animation
      if (submenu.classList.contains("active")) {
        submenu.style.maxHeight = submenu.scrollHeight + "px";
      } else {
        submenu.style.maxHeight = "0";
      }
    });
  });
  
  // Search functionality
  const servicios = [
    "Meseros profesionales",
    "Bartenders",
    "Hostess",
    "Capitanes de meseros",
    "Lavalozas",
    "Cuidacoches",
    "Montaje y desmontaje",
    "Personal de apoyo",
    "Bodas",
    "Eventos corporativos",
    "Eventos sociales",
    "XV años"
  ];
  
  function showSuggestions(input, suggestionsElement) {
    const value = input.value.toLowerCase();
    
    if (value.length < 2) {
      suggestionsElement.classList.remove("active");
      return;
    }
    
    const filteredServices = servicios.filter(servicio => 
      servicio.toLowerCase().includes(value)
    );
    
    if (filteredServices.length > 0) {
      suggestionsElement.innerHTML = "";
      filteredServices.forEach(servicio => {
        const item = document.createElement("div");
        item.className = "suggestion-item";
        item.innerHTML = `<i class="bi bi-search"></i> ${servicio}`;
        item.addEventListener("click", () => {
          input.value = servicio;
          performSearch(servicio);
        });
        suggestionsElement.appendChild(item);
      });
      suggestionsElement.classList.add("active");
    } else {
      suggestionsElement.classList.remove("active");
    }
  }
  
  function performSearch(query) {
    if (!query || query.trim() === "") return;
    
    // Sanitize query
    query = query.trim().toLowerCase();
    
    // Redirect to search results page
    window.location.href = `/buscar?q=${encodeURIComponent(query)}`;
  }
  
  // Desktop search event listeners
  if (searchInput && searchBtn && searchSuggestions) {
    searchInput.addEventListener("input", () => {
      showSuggestions(searchInput, searchSuggestions);
    });
    
    searchInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") {
        performSearch(searchInput.value);
      }
    });
    
    searchBtn.addEventListener("click", () => {
      performSearch(searchInput.value);
    });
    
    // Close suggestions when clicking outside
    document.addEventListener("click", (e) => {
      if (!searchInput.contains(e.target) && !searchSuggestions.contains(e.target)) {
        searchSuggestions.classList.remove("active");
      }
    });
  }
  
  // Mobile search event listeners
  if (mobileSearchInput && mobileSearchBtn && mobileSearchSuggestions) {
    mobileSearchInput.addEventListener("input", () => {
      showSuggestions(mobileSearchInput, mobileSearchSuggestions);
    });
    
    mobileSearchInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") {
        performSearch(mobileSearchInput.value);
      }
    });
    
    mobileSearchBtn.addEventListener("click", () => {
      performSearch(mobileSearchInput.value);
    });
    
    // Close suggestions when clicking outside
    document.addEventListener("click", (e) => {
      if (!mobileSearchInput.contains(e.target) && !mobileSearchSuggestions.contains(e.target)) {
        mobileSearchSuggestions.classList.remove("active");
      }
    });
  }
  
  // Set active navigation links based on current path
  const currentPath = window.location.pathname;
  
  function setActiveLinks(selector) {
    const links = document.querySelectorAll(selector);
    links.forEach(link => {
      const href = link.getAttribute('href');
      if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
        if (link.parentElement) {
          link.parentElement.classList.add('active');
          
          // If it's a submenu, open the parent
          const parentLi = link.closest('.has-children');
          if (parentLi) {
            const toggleBtn = parentLi.querySelector('.toggle-submenu');
            const submenu = parentLi.querySelector('.submenu');
            if (toggleBtn && submenu) {
              toggleBtn.classList.add('active');
              submenu.classList.add('active');
              submenu.style.maxHeight = submenu.scrollHeight + "px";
            }
          }
        }
      }
    });
  }
  
  setActiveLinks('.nav-link');
  setActiveLinks('.panel-nav-list a');
  setActiveLinks('.bottom-nav-item');
  
  // Adjust mega menu position to prevent overflow
  const megaMenuItems = document.querySelectorAll('.has-mega-menu');
  megaMenuItems.forEach(item => {
    const megaMenu = item.querySelector('.mega-menu');
    if (megaMenu) {
      function adjustMegaMenuPosition() {
        // Reset position
        megaMenu.style.left = '50%';
        megaMenu.style.transform = 'translateX(-50%) translateY(10px)';
        
        // Get dimensions
        const rect = megaMenu.getBoundingClientRect();
        const windowWidth = window.innerWidth;
        
        // Adjust if overflowing right
        if (rect.right > windowWidth) {
          const overflow = rect.right - windowWidth;
          megaMenu.style.left = `calc(50% - ${overflow + 20}px)`;
        }
        
        // Adjust if overflowing left
        if (rect.left < 0) {
          const overflow = Math.abs(rect.left);
          megaMenu.style.left = `calc(50% + ${overflow + 20}px)`;
        }
      }
      
      window.addEventListener('resize', adjustMegaMenuPosition);
      item.addEventListener('mouseenter', adjustMegaMenuPosition);
    }
  });
  
  // Detectar el botón de chatbot y ajustar los botones sociales flotantes
  const chatbotButton = document.querySelector('.chat-button, [id*="chat"], [class*="chat"]');
  const reviewButton = document.querySelector('.review-button, [id*="review"], [class*="review"], [id*="resena"], [class*="resena"]');
  const floatingSocialButtons = document.querySelector('.floating-social-buttons');
  
    
});
</script>
