
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}} - Plato y Copa</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin-styles.css">
</head>
<body>
  <div class="admin-container">
    <!-- Sidebar -->
    <div class="admin-sidebar">
      <div class="sidebar-header">
        <img src="/img/Plato_y_copa_logo.jpg" alt="Plato y Copa Logo" class="sidebar-logo">
        <h3>Panel Admin</h3>
      </div>
      <div class="sidebar-menu">
        <ul>
          <li><a href="/dashboard" class="{{#if activeDashboard}}active{{/if}}"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
          <li><a href="/admin/servicios" class="{{#if activeServicios}}active{{/if}}"><i class="bi bi-star"></i> Servicios</a></li>
          <li><a href="/admin/galeria" class="{{#if activeGaleria}}active{{/if}}"><i class="bi bi-images"></i> Galería</a></li>
          <li><a href="/admin/resenas" class="{{#if activeResenas}}active{{/if}}"><i class="bi bi-chat-quote"></i> Reseñas</a></li>
          <li><a href="/admin/cotizaciones" class="{{#if activeCotizaciones}}active{{/if}}"><i class="bi bi-calculator"></i> Cotizaciones</a></li>
          <li><a href="/admin/contratos" class="{{#if activeContratos}}active{{/if}}"><i class="bi bi-file-earmark-text"></i> Contratos</a></li>
          <li><a href="/admin/mensajes" class="{{#if activeMensajes}}active{{/if}}"><i class="bi bi-envelope"></i> Mensajes</a></li>
          <li><a href="/admin/estadisticas" class="{{#if activeEstadisticas}}active{{/if}}"><i class="bi bi-graph-up"></i> Estadísticas</a></li>
          <li><a href="/admin/equipo" class="{{#if activeEquipo}}active{{/if}}"><i class="bi bi-people"></i> Equipo</a></li>
          <li><a href="/admin/configuracion" class="{{#if activeConfiguracion}}active{{/if}}"><i class="bi bi-gear"></i> Configuración</a></li>
        </ul>
      </div>
      <div class="sidebar-footer">
        <a href="/logout" class="logout-btn"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a>
      </div>
    </div>
    
    <!-- Main Content -->
    <div class="admin-content">
      <div class="admin-header">
        <div class="header-search">
          <i class="bi bi-search"></i>
          <input type="text" placeholder="Buscar...">
        </div>
        <div class="header-actions">
          <a href="/" class="btn-view-site" target="_blank"><i class="bi bi-eye"></i> Ver Sitio</a>
          <div class="user-dropdown">
            <span class="user-name">{{user.nombre}}</span>
            <img src="/img/admin-avatar.jpg" alt="Admin" class="user-avatar">
          </div>
        </div>
      </div>
      
      <div class="admin-main">
        {{{body}}}
      </div>
      
      <div class="admin-footer">
        <p>&copy; 2024 Plato y Copa. Todos los derechos reservados.</p>
      </div>
    </div>
  </div>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/admin.js"></script>
  
  {{#if scripts}}
      {{{scripts}}}
  {{/if}}
</body>
</html>
