  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Elementos del DOM
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.getElementById('mainContent');
      const sidebarToggle = document.getElementById('sidebarToggle');
      const mobileSidebarToggle = document.getElementById('mobileSidebarToggle');
      const sidebarClose = document.getElementById('sidebarClose');
      const sidebarOverlay = document.getElementById('sidebarOverlay');
      const searchBox = document.getElementById('searchBox');
      const globalSearch = document.getElementById('globalSearch');
      const searchResults = document.getElementById('searchResults');
      const mobileSearchToggle = document.getElementById('mobileSearchToggle');
      const mobileSearchContainer = document.getElementById('mobileSearchContainer');
      const mobileSearchClose = document.getElementById('mobileSearchClose');
      const mobileSearchInput = document.getElementById('mobileSearchInput');
      const mobileSearchResults = document.getElementById('mobileSearchResults');
      
      // Detectar si estamos en móvil o escritorio
      function isMobileView() {
        return window.innerWidth < 992;
      }
      
      // Configuración inicial basada en el tamaño de pantalla
      function setupInitialState() {
        if (isMobileView()) {
          // En móvil, asegurarse que el sidebar esté oculto y el contenido principal a la izquierda
          sidebar.classList.remove('collapsed');
          sidebar.classList.remove('show');
          mainContent.style.marginLeft = '0';
          mainContent.style.width = '100%';
          document.body.classList.remove('sidebar-open');
          sidebarOverlay.classList.remove('active');
        } else {
          // En escritorio, restaurar el estado normal
          sidebar.classList.remove('show');
          if (sidebar.classList.contains('collapsed')) {
            mainContent.style.marginLeft = 'var(--sidebar-collapsed-width)';
            mainContent.style.width = 'calc(100% - var(--sidebar-collapsed-width))';
          } else {
            mainContent.style.marginLeft = 'var(--sidebar-width)';
            mainContent.style.width = 'calc(100% - var(--sidebar-width))';
          }
          document.body.classList.remove('sidebar-open');
          sidebarOverlay.classList.remove('active');
          
          // Asegurarse que la búsqueda esté visible en escritorio
          searchBox.classList.remove('show');
          mobileSearchContainer.classList.remove('active');
        }
      }
      
      // Inicializar
      setupInitialState();
      
      // Toggle para escritorio con animación GSAP
      sidebarToggle.addEventListener('click', function(e) {
        e.stopPropagation();
        if (!isMobileView()) {
          sidebar.classList.toggle('collapsed');
          
          // Usar GSAP para animar el cambio de ancho del contenido principal
          if (sidebar.classList.contains('collapsed')) {
            gsap.to(mainContent, {
              marginLeft: 'var(--sidebar-collapsed-width)',
              width: 'calc(100% - var(--sidebar-collapsed-width))',
              duration: 0.3,
              ease: "power2.out"
            });
            
            // Animar el icono del toggle
            gsap.to(this.querySelector('i'), {
              rotation: 180,
              duration: 0.3,
              ease: "back.out(1.7)"
            });
          } else {
            gsap.to(mainContent, {
              marginLeft: 'var(--sidebar-width)',
              width: 'calc(100% - var(--sidebar-width))',
              duration: 0.3,
              ease: "power2.out"
            });
            
            // Animar el icono del toggle
            gsap.to(this.querySelector('i'), {
              rotation: 0,
              duration: 0.3,
              ease: "back.out(1.7)"
            });
          }
        }
      });
      
      // Toggle para móvil con animación
      mobileSidebarToggle.addEventListener('click', function(e) {
        e.stopPropagation();
        if (isMobileView()) {
          sidebar.classList.toggle('show');
          sidebarOverlay.classList.toggle('active');
          document.body.classList.toggle('sidebar-open');
          
          // Animar el icono del toggle
          if (document.body.classList.contains('sidebar-open')) {
            gsap.to(this.querySelector('i'), {
              rotation: 90,
              duration: 0.3,
              ease: "back.out(1.7)"
            });
          } else {
            gsap.to(this.querySelector('i'), {
              rotation: 0,
              duration: 0.3,
              ease: "back.out(1.7)"
            });
          }
        }
      });
      
      // Botón de cierre del sidebar en móvil
      sidebarClose.addEventListener('click', function(e) {
        e.stopPropagation();
        if (isMobileView() && sidebar.classList.contains('show')) {
          sidebar.classList.remove('show');
          sidebarOverlay.classList.remove('active');
          document.body.classList.remove('sidebar-open');
          
          // Animar el icono del toggle móvil
          gsap.to(mobileSidebarToggle.querySelector('i'), {
            rotation: 0,
            duration: 0.3,
            ease: "back.out(1.7)"
          });
        }
      });
      
      // Toggle para búsqueda en móvil - Ahora abre el contenedor de búsqueda móvil
      mobileSearchToggle.addEventListener('click', function(e) {
        e.stopPropagation();
        if (isMobileView()) {
          mobileSearchContainer.classList.add('active');
          setTimeout(() => {
            mobileSearchInput.focus();
          }, 300);
        }
      });
      
      // Cerrar búsqueda móvil
      mobileSearchClose.addEventListener('click', function(e) {
        e.stopPropagation();
        mobileSearchContainer.classList.remove('active');
      });
      
      // Cerrar sidebar en móvil al hacer clic en el overlay
      sidebarOverlay.addEventListener('click', function() {
        if (isMobileView() && sidebar.classList.contains('show')) {
          sidebar.classList.remove('show');
          sidebarOverlay.classList.remove('active');
          document.body.classList.remove('sidebar-open');
          
          // Animar el icono del toggle
          gsap.to(mobileSidebarToggle.querySelector('i'), {
            rotation: 0,
            duration: 0.3,
            ease: "back.out(1.7)"
          });
        }
      });
      
      // Manejar cambios de tamaño de ventana y orientación
      window.addEventListener('resize', function() {
        setupInitialState();
      });
      
      window.addEventListener('orientationchange', function() {
        setupInitialState();
      });
      
      // Dropdown toggle con animación
      const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
      dropdownToggles.forEach(toggle => {
        toggle.addEventListener('click', function(e) {
          e.stopPropagation();
          const dropdown = this.closest('.dropdown');
          
          // Si el dropdown está cerrado, lo abrimos con animación
          if (!dropdown.classList.contains('active')) {
            dropdown.classList.add('active');
            
            // Animar la apertura del dropdown
            const dropdownMenu = dropdown.querySelector('.dropdown-menu');
            gsap.fromTo(dropdownMenu, 
              { opacity: 0, y: 10 },
              { opacity: 1, y: 0, duration: 0.3, ease: "power2.out" }
            );
          } else {
            // Si está abierto, lo cerramos
            dropdown.classList.remove('active');
          }
          
          // Cerrar otros dropdowns
          dropdownToggles.forEach(otherToggle => {
            const otherDropdown = otherToggle.closest('.dropdown');
            if (otherDropdown !== dropdown && otherDropdown.classList.contains('active')) {
              otherDropdown.classList.remove('active');
            }
          });
        });
      });
      
      // Cerrar dropdowns al hacer clic fuera
      document.addEventListener('click', function() {
        dropdownToggles.forEach(toggle => {
          const dropdown = toggle.closest('.dropdown');
          if (dropdown.classList.contains('active')) {
            dropdown.classList.remove('active');
          }
        });
        
        // También cerrar el cuadro de búsqueda si está activo
        if (searchBox.classList.contains('active')) {
          searchBox.classList.remove('active');
        }
      });
      
      // Evitar que el clic en el cuadro de búsqueda cierre los resultados
      searchBox.addEventListener('click', function(e) {
        e.stopPropagation();
      });
      
      // Evitar que el clic en el contenedor de búsqueda móvil lo cierre
      mobileSearchContainer.addEventListener('click', function(e) {
        e.stopPropagation();
      });
      
      // Mejorar la navegación del sidebar
      const navLinks = document.querySelectorAll('.sidebar-nav a');
      
      // Marcar el enlace activo basado en la URL actual
      const currentPath = window.location.pathname;
      navLinks.forEach(link => {
        // Verificar si la URL actual coincide con el href del enlace
        if (link.getAttribute('href') === currentPath || 
            (currentPath.startsWith(link.getAttribute('href')) && link.getAttribute('href') !== '/dashboard')) {
          // Encontrar el elemento padre (li) y añadir la clase active
          const navItem = link.closest('.nav-item');
          if (navItem) {
            navItem.classList.add('active');
          }
        }
        
        // Cerrar sidebar en móvil al hacer clic en un enlace del menú
        link.addEventListener('click', function(e) {
          // Almacenar la sección activa en localStorage
          const section = this.getAttribute('data-section');
          if (section) {
            localStorage.setItem('activeSection', section);
          }
          
          if (isMobileView() && sidebar.classList.contains('show')) {
            sidebar.classList.remove('show');
            sidebarOverlay.classList.remove('active');
            document.body.classList.remove('sidebar-open');
          }
        });
      });
      
      // Restaurar la sección activa desde localStorage si no hay una activa
      const activeItems = document.querySelectorAll('.nav-item.active');
      if (activeItems.length === 0) {
        const activeSection = localStorage.getItem('activeSection');
        if (activeSection) {
          const link = document.querySelector(`.sidebar-nav a[data-section="${activeSection}"]`);
          if (link) {
            const navItem = link.closest('.nav-item');
            if (navItem) {
              navItem.classList.add('active');
            }
          }
        }
      }
      
      // Función para realizar la búsqueda
      async function performSearch(query, resultsContainer) {
        if (query.length < 2) {
          resultsContainer.innerHTML = "";
          return;
        }

        try {
          // Mostrar indicador de carga con animación
          resultsContainer.innerHTML = '<div class="search-loading"><i class="bi bi-arrow-repeat spin"></i> Buscando...</div>';
          
          if (resultsContainer === searchResults) {
            searchBox.classList.add("active");
          }

          // Realizar petición AJAX al servidor
          const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
          const data = await response.json();

          if (!data.success) {
            throw new Error(data.message || "Error al realizar la búsqueda");
          }

          // Si no hay resultados
          if (!data.results || data.results.length === 0) {
            resultsContainer.innerHTML = '<div class="search-no-results">No se encontraron resultados</div>';
            return;
          }

          // Construir HTML de resultados
          let resultsHTML = "";

          // Mostrar resultados agrupados por categoría
          Object.entries(data.groupedResults).forEach(([category, results]) => {
            if (results.length > 0) {
              resultsHTML += `<div class="search-result-category">${category}</div>`;

              results.forEach((result) => {
                const isSection = result.isSection ? 'data-is-section="true"' : "";
                const entityId = result.entityId ? `data-entity-id="${result.entityId}"` : "";
                const entityType = result.entityType ? `data-entity-type="${result.entityType}"` : "";

                resultsHTML += `
                  <div class="search-result-item" data-url="${result.url}" ${entityId} ${entityType} ${isSection}>
                    <div class="search-result-item-icon">
                      ${
                        result.image
                          ? `<img src="${result.image}" alt="${result.title}">`
                          : `<i class="bi ${result.icon}"></i>`
                      }
                    </div>
                    <div class="search-result-item-content">
                      <div class="search-result-item-title">${result.title}</div>
                      <div class="search-result-item-description">${result.description}</div>
                    </div>
                  </div>
                `;
              });
            }
          });

          // Añadir enlace para ver todos los resultados
          resultsHTML += `
            <div class="search-view-all">
              <a href="/dashboard/buscar?q=${encodeURIComponent(query)}">
                Ver todos los resultados <i class="bi bi-arrow-right"></i>
              </a>
            </div>
          `;

          resultsContainer.innerHTML = resultsHTML;

          // Animar la aparición de los resultados
          gsap.fromTo(resultsContainer.querySelectorAll(".search-result-item"), 
            { opacity: 0, x: -10 },
            { opacity: 1, x: 0, duration: 0.3, stagger: 0.05, ease: "power2.out" }
          );

          // Añadir eventos de clic a los resultados
          const resultItems = resultsContainer.querySelectorAll(".search-result-item");
          resultItems.forEach((item) => {
            item.addEventListener("click", function () {
              const url = this.getAttribute("data-url");
              const entityId = this.getAttribute("data-entity-id");
              const entityType = this.getAttribute("data-entity-type");
              const isSection = this.getAttribute("data-is-section") === "true";

              if (isSection) {
                // Si es una sección, simplemente navegar a ella
                window.location.href = url;
                return;
              }

              // Si no es una sección, navegar a la URL y luego resaltar el elemento
              sessionStorage.setItem(
                "searchHighlight",
                JSON.stringify({
                  entityId: entityId,
                  entityType: entityType,
                })
              );

              window.location.href = url;
            });
          });
        } catch (error) {
          console.error("Error en búsqueda:", error);
          resultsContainer.innerHTML = '<div class="search-error">Error al realizar la búsqueda</div>';
        }
      }

      // Buscar mientras se escribe en escritorio (con debounce)
      let searchTimeout;
      globalSearch.addEventListener("input", function () {
        clearTimeout(searchTimeout);
        const query = this.value.trim();

        searchTimeout = setTimeout(() => {
          performSearch(query, searchResults);
        }, 300);
      });

      // Buscar mientras se escribe en móvil (con debounce)
      let mobileSearchTimeout;
      mobileSearchInput.addEventListener("input", function () {
        clearTimeout(mobileSearchTimeout);
        const query = this.value.trim();

        mobileSearchTimeout = setTimeout(() => {
          performSearch(query, mobileSearchResults);
        }, 300);
      });

      // Manejar la tecla Enter para ir a la página de resultados completos (escritorio)
      globalSearch.addEventListener("keypress", function (e) {
        if (e.key === "Enter") {
          e.preventDefault();
          const searchTerm = this.value.trim();
          if (searchTerm) {
            // Animar el botón de búsqueda
            const searchIcon = searchBox.querySelector("i");
            gsap.to(searchIcon, {
              scale: 1.2,
              duration: 0.2,
              yoyo: true,
              repeat: 1,
              onComplete: () => {
                window.location.href = `/dashboard/buscar?q=${encodeURIComponent(searchTerm)}`;
              }
            });
          }
        }
      });

      // Manejar la tecla Enter para ir a la página de resultados completos (móvil)
      mobileSearchInput.addEventListener("keypress", function (e) {
        if (e.key === "Enter") {
          e.preventDefault();
          const searchTerm = this.value.trim();
          if (searchTerm) {
            // Animar el botón de búsqueda
            const searchIcon = mobileSearchContainer.querySelector(".mobile-search-input-container i");
            gsap.to(searchIcon, {
              scale: 1.2,
              duration: 0.2,
              yoyo: true,
              repeat: 1,
              onComplete: () => {
                window.location.href = `/dashboard/buscar?q=${encodeURIComponent(searchTerm)}`;
              }
            });
          }
        }
      });
      
      // Mostrar resultados al enfocar el campo de búsqueda (escritorio)
      globalSearch.addEventListener("focus", () => {
        const query = globalSearch.value.trim();
        if (query.length >= 2) {
          performSearch(query, searchResults);
        }
      });
      
      // Mostrar resultados al enfocar el campo de búsqueda (móvil)
      mobileSearchInput.addEventListener("focus", () => {
        const query = mobileSearchInput.value.trim();
        if (query.length >= 2) {
          performSearch(query, mobileSearchResults);
        }
      });
      
      // Añadir cualquier funcionalidad existente de dashboard.js
      if (typeof window.dashboardInit === 'function') {
        window.dashboardInit();
      }
    });
  </script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Verificar si hay un elemento para resaltar desde la búsqueda
      const searchHighlight = sessionStorage.getItem("searchHighlight");

      if (searchHighlight) {
        try {
          const { entityId, entityType } = JSON.parse(searchHighlight);

          // Limpiar el storage para no repetir el resaltado en futuras cargas
          sessionStorage.removeItem("searchHighlight");

          // Función para resaltar un elemento según su tipo
          highlightElement(entityId, entityType);
        } catch (error) {
          console.error("Error al procesar el resaltado de búsqueda:", error);
        }
      }

      // Función para resaltar un elemento según su tipo
      function highlightElement(entityId, entityType) {
        let selector;

        // Crear selectores específicos para cada tipo de entidad
        switch (entityType) {
          case "servicio":
            selector = `tr[data-servicio-id="${entityId}"], div[data-servicio-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="servicio-${entityId}"]`;
            break;
          case "tipo-evento":
            selector = `tr[data-tipo-evento-id="${entityId}"], div[data-tipo-evento-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="tipo-evento-${entityId}"]`;
            break;
          case "imagen":
            selector = `tr[data-imagen-id="${entityId}"], div[data-imagen-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="imagen-${entityId}"]`;
            break;
          case "usuario":
            selector = `tr[data-usuario-id="${entityId}"], div[data-usuario-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="usuario-${entityId}"]`;
            break;
          case "cotizacion":
            selector = `tr[data-cotizacion-id="${entityId}"], div[data-cotizacion-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="cotizacion-${entityId}"]`;
            break;
          case "mensaje":
            selector = `tr[data-mensaje-id="${entityId}"], div[data-mensaje-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="mensaje-${entityId}"]`;
            break;
          case "resena":
            selector = `tr[data-resena-id="${entityId}"], div[data-resena-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="resena-${entityId}"]`;
            break;
          case "personal":
            selector = `tr[data-personal-id="${entityId}"], div[data-personal-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="personal-${entityId}"]`;
            break;
          case "contrato":
            selector = `tr[data-contrato-id="${entityId}"], div[data-contrato-id="${entityId}"], tr[data-id="${entityId}"], div[data-id="${entityId}"], [id="contrato-${entityId}"]`;
            break;
          default:
            selector = `[data-id="${entityId}"]`;
        }

        // Buscar el elemento con cualquiera de los selectores
        const element = document.querySelector(selector);

        if (element) {
          // Añadir clase de resaltado con animación GSAP
          element.classList.add("search-highlight");

          // Hacer scroll al elemento con animación
          gsap.to(window, {
            duration: 0.8,
            scrollTo: {
              y: element,
              offsetY: 100
            },
            ease: "power2.out"
          });

          // Quitar el resaltado después de unos segundos
          setTimeout(() => {
            element.classList.remove("search-highlight");
            // Añadir una transición suave para quitar el resaltado
            element.classList.add("search-highlight-fade");

            // Eliminar todas las clases después de la transición
            setTimeout(() => {
              element.classList.remove("search-highlight-fade");
            }, 1000);
          }, 3000);
        } else {
          console.log(`Elemento no encontrado: ${entityType} con ID ${entityId}`);

          // Si no se encuentra el elemento, intentar buscar en tablas genéricas
          const tableRows = document.querySelectorAll("tr");

          tableRows.forEach((row) => {
            const cells = row.querySelectorAll("td");
            cells.forEach((cell) => {
              if (cell.textContent.includes(entityId)) {
                row.classList.add("search-highlight");
                
                // Hacer scroll al elemento con animación
                gsap.to(window, {
                  duration: 0.8,
                  scrollTo: {
                    y: row,
                    offsetY: 100
                  },
                  ease: "power2.out"
                });

                setTimeout(() => {
                  row.classList.remove("search-highlight");
                  row.classList.add("search-highlight-fade");

                  setTimeout(() => {
                    row.classList.remove("search-highlight-fade");
                  }, 1000);
                }, 3000);
              }
            });
          });
        }
      }
    });
  </script>

