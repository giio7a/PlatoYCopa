{{#section 'scripts'}}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Cambiar entre secciones de contenido
    const contentTabs = document.querySelectorAll('.content-tab');
    const contentSections = document.querySelectorAll('.content-section');
    
    contentTabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const section = this.getAttribute('data-section');
        
        // Actualizar tabs
        contentTabs.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        
        // Actualizar secciones
        contentSections.forEach(s => s.classList.remove('active'));
        document.getElementById(`${section}-section`).classList.add('active');
      });
    });
    
    // Cambiar entre tabs de formulario
    const formTabs = document.querySelectorAll('.form-tab');
    const formTabContents = document.querySelectorAll('.form-tab-content');
    
    formTabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const tabId = this.getAttribute('data-tab');
        
        // Actualizar tabs
        formTabs.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        
        // Actualizar contenidos
        formTabContents.forEach(c => c.classList.remove('active'));
        document.getElementById(`${tabId}-tab`).classList.add('active');
      });
    });
    
    // Funcionalidad para repeater (agregar/eliminar características)
    const addCaracteristicaBtn = document.getElementById('add-caracteristica');
    const caracteristicasContainer = document.getElementById('caracteristicas-items');
    
    if (addCaracteristicaBtn) {
      addCaracteristicaBtn.addEventListener('click', function() {
        const items = caracteristicasContainer.querySelectorAll('.repeater-item');
        const index = items.length;
        
        const newItem = document.createElement('div');
        newItem.className = 'repeater-item';
        newItem.innerHTML = `
          <div class="repeater-item-header">
            <span class="repeater-item-title">Característica ${index}</span>
            <div class="repeater-item-actions">
              <button type="button" class="btn-repeater-action move-up" title="Mover arriba">
                <i class="bi bi-arrow-up"></i>
              </button>
              <button type="button" class="btn-repeater-action move-down" title="Mover abajo">
                <i class="bi bi-arrow-down"></i>
              </button>
              <button type="button" class="btn-repeater-action delete" title="Eliminar">
                <i class="bi bi-trash"></i>
              </button>
            </div>
          </div>
          <div class="repeater-item-content">
            <div class="form-row">
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Título</label>
                  <input type="text" class="form-control" name="home[caracteristicas][items][${index}][titulo]" required>
                </div>
              </div>
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Icono</label>
                  <input type="text" class="form-control" name="home[caracteristicas][items][${index}][icono]" required>
                  <div class="form-text">Nombre del icono de Bootstrap Icons (sin el prefijo bi-).</div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="form-label">Descripción</label>
              <textarea class="form-control" name="home[caracteristicas][items][${index}][descripcion]" rows="2" required></textarea>
            </div>
          </div>
        `;
        
        caracteristicasContainer.appendChild(newItem);
        initRepeaterItemEvents(newItem);
      });
    }
    
    // Inicializar eventos para items existentes
    function initRepeaterItemEvents(item) {
      const deleteBtn = item.querySelector('.btn-repeater-action.delete');
      const moveUpBtn = item.querySelector('.btn-repeater-action.move-up');
      const moveDownBtn = item.querySelector('.btn-repeater-action.move-down');
      const header = item.querySelector('.repeater-item-header');
      
      if (deleteBtn) {
        deleteBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          if (confirm('¿Estás seguro de que deseas eliminar este elemento?')) {
            item.remove();
            updateRepeaterIndexes();
          }
        });
      }
      
      if (moveUpBtn) {
        moveUpBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          const prev = item.previousElementSibling;
          if (prev) {
            caracteristicasContainer.insertBefore(item, prev);
            updateRepeaterIndexes();
          }
        });
      }
      
      if (moveDownBtn) {
        moveDownBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          const next = item.nextElementSibling;
          if (next) {
            caracteristicasContainer.insertBefore(next, item);
            updateRepeaterIndexes();
          }
        });
      }
      
      if (header) {
        header.addEventListener('click', function() {
          const content = item.querySelector('.repeater-item-content');
          if (content.style.display === 'none') {
            content.style.display = 'block';
          } else {
            content.style.display = 'none';
          }
        });
      }
    }
    
    // Actualizar índices después de reordenar
    function updateRepeaterIndexes() {
      const items = caracteristicasContainer.querySelectorAll('.repeater-item');
      
      items.forEach((item, index) => {
        const title = item.querySelector('.repeater-item-title');
        const inputs = item.querySelectorAll('input, textarea');
        
        if (title) {
          title.textContent = `Característica ${index}`;
        }
        
        inputs.forEach(input => {
          const name = input.getAttribute('name');
          if (name) {
            const newName = name.replace(/\[\d+\]/, `[${index}]`);
            input.setAttribute('name', newName);
          }
        });
      });
    }
    
    // Inicializar eventos para items existentes
    document.querySelectorAll('.repeater-item').forEach(item => {
      initRepeaterItemEvents(item);
    });
    
    // Envío de formulario para editar contenido
    document.querySelectorAll('.crud-form[data-type="contenido"]').forEach(form => {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const section = this.getAttribute('data-section');
        
        fetch(`/api/contenido/${section}`, {
          method: 'POST',
          body: formData
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Cerrar modal
            const modal = this.closest('.modal');
            modal.classList.remove('show');
            document.body.style.overflow = '';
            
            // Mostrar mensaje de éxito
            window.showToast({
              type: 'success',
              title: 'Éxito',
              message: 'Contenido actualizado correctamente.'
            });
            
            // Recargar página para ver cambios
            setTimeout(() => {
              window.location.reload();
            }, 1000);
          } else {
            window.showToast({
              type: 'error',
              title: 'Error',
              message: data.message || 'No se pudo actualizar el contenido.'
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          window.showToast({
            type: 'error',
            title: 'Error',
            message: 'Ocurrió un error al procesar la solicitud.'
          });
        });
      });
    });
  });
</script>
{{/section}}