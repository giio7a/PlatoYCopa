<div class="modal" id="editHomeModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Editar Contenido de Inicio</h3>
        <button type="button" class="modal-close" data-dismiss="modal">
          <i class="bi bi-x-lg"></i>
        </button>
      </div>
      <div class="modal-body">
        <form id="editHomeForm" class="crud-form needs-validation" data-type="contenido" data-section="home" novalidate>
          <div class="form-tabs">
            <button type="button" class="form-tab active" data-tab="banner">Banner</button>
            <button type="button" class="form-tab" data-tab="introduccion">Introducción</button>
            <button type="button" class="form-tab" data-tab="caracteristicas">Características</button>
          </div>
          
          <div class="form-tab-content active" id="banner-tab">
            <h4>Banner Principal</h4>
            
            <div class="form-group">
              <label for="home_banner_titulo" class="form-label">Título</label>
              <input type="text" class="form-control" id="home_banner_titulo" name="home[banner][titulo]" value="{{contenido.home.banner.titulo}}" required>
              <div class="invalid-feedback">Por favor ingresa un título.</div>
            </div>
            
            <div class="form-group">
              <label for="home_banner_subtitulo" class="form-label">Subtítulo</label>
              <input type="text" class="form-control" id="home_banner_subtitulo" name="home[banner][subtitulo]" value="{{contenido.home.banner.subtitulo}}" required>
              <div class="invalid-feedback">Por favor ingresa un subtítulo.</div>
            </div>
            
            <div class="form-group">
              <label for="home_banner_boton_texto" class="form-label">Texto del Botón</label>
              <input type="text" class="form-control" id="home_banner_boton_texto" name="home[banner][boton_texto]" value="{{contenido.home.banner.boton_texto}}" required>
              <div class="invalid-feedback">Por favor ingresa el texto del botón.</div>
            </div>
            
            <div class="form-group">
              <label for="home_banner_imagen" class="form-label">Imagen de Fondo</label>
              <div class="current-image-container">
                <img src="{{contenido.home.banner.imagen}}" alt="Banner" class="current-image">
              </div>
              <input type="file" class="form-control" id="home_banner_imagen" name="home_banner_imagen" accept="image/*">
              <div class="form-text">Deja en blanco para mantener la imagen actual.</div>
            </div>
          </div>
          
          <div class="form-tab-content" id="introduccion-tab">
            <h4>Sección de Introducción</h4>
            
            <div class="form-group">
              <label for="home_introduccion_titulo" class="form-label">Título</label>
              <input type="text" class="form-control" id="home_introduccion_titulo" name="home[introduccion][titulo]" value="{{contenido.home.introduccion.titulo}}" required>
              <div class="invalid-feedback">Por favor ingresa un título.</div>
            </div>
            
            <div class="form-group">
              <label for="home_introduccion_descripcion" class="form-label">Descripción</label>
              <textarea class="form-control" id="home_introduccion_descripcion" name="home[introduccion][descripcion]" rows="4" required>{{contenido.home.introduccion.descripcion}}</textarea>
              <div class="invalid-feedback">Por favor ingresa una descripción.</div>
            </div>
            
            <div class="form-group">
              <label for="home_introduccion_imagen" class="form-label">Imagen</label>
              <div class="current-image-container">
                <img src="{{contenido.home.introduccion.imagen}}" alt="Introducción" class="current-image">
              </div>
              <input type="file" class="form-control" id="home_introduccion_imagen" name="home_introduccion_imagen" accept="image/*">
              <div class="form-text">Deja en blanco para mantener la imagen actual.</div>
            </div>
          </div>
          
          <div class="form-tab-content" id="caracteristicas-tab">
            <h4>Sección de Características</h4>
            
            <div class="form-group">
              <label for="home_caracteristicas_titulo" class="form-label">Título</label>
              <input type="text" class="form-control" id="home_caracteristicas_titulo" name="home[caracteristicas][titulo]" value="{{contenido.home.caracteristicas.titulo}}" required>
              <div class="invalid-feedback">Por favor ingresa un título.</div>
            </div>
            
            <div class="form-group">
              <label for="home_caracteristicas_descripcion" class="form-label">Descripción</label>
              <textarea class="form-control" id="home_caracteristicas_descripcion" name="home[caracteristicas][descripcion]" rows="3" required>{{contenido.home.caracteristicas.descripcion}}</textarea>
              <div class="invalid-feedback">Por favor ingresa una descripción.</div>
            </div>
            
            <div class="form-group">
              <label class="form-label">Características</label>
              <div class="repeater-items" id="caracteristicas-items">
                {{#each contenido.home.caracteristicas.items}}
                <div class="repeater-item">
                  <div class="repeater-item-header">
                    <span class="repeater-item-title">Característica {{@index}}</span>
                    <div class="repeater-item-actions">
                      <button type="button" class="btn-repeater-action move-up" title="Mover arriba">
                        <i class="bi bi-arrow-up"></i>
                      </button>
                      <button type="button" class="btn-repeater-action move-down" title="Mover abajo">
                        <i class="bi bi-arrow-down"></i>
                      </button>
                      <button type="button" class="btn-repeater-action delete" title="Eliminar">
                        <i class="bi bi-trash"></i>
                      </button>
                    </div>
                  </div>
                  <div class="repeater-item-content">
                    <div class="form-row">
                      <div class="form-col">
                        <div class="form-group">
                          <label class="form-label">Título</label>
                          <input type="text" class="form-control" name="home[caracteristicas][items][{{@index}}][titulo]" value="{{this.titulo}}" required>
                        </div>
                      </div>
                      <div class="form-col">
                        <div class="form-group">
                          <label class="form-label">Icono</label>
                          <input type="text" class="form-control" name="home[caracteristicas][items][{{@index}}][icono]" value="{{this.icono}}" required>
                          <div class="form-text">Nombre del icono de Bootstrap Icons (sin el prefijo bi-).</div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="form-label">Descripción</label>
                      <textarea class="form-control" name="home[caracteristicas][items][{{@index}}][descripcion]" rows="2" required>{{this.descripcion}}</textarea>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
              <button type="button" class="btn btn-secondary btn-sm mt-2" id="add-caracteristica">
                <i class="bi bi-plus-lg"></i> Agregar Característica
              </button>
            </div>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

