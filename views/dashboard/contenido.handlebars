{{#section 'styles'}}
<style>
  .content-tabs {
    display: flex;
    overflow-x: auto;
    margin-bottom: 20px;
    border-bottom: 1px solid var(--gold-border);
    scrollbar-width: thin;
    scrollbar-color: var(--gold-dark) var(--black-light);
  }
  
  .content-tabs::-webkit-scrollbar {
    height: 5px;
  }
  
  .content-tabs::-webkit-scrollbar-track {
    background: var(--black-light);
  }
  
  .content-tabs::-webkit-scrollbar-thumb {
    background-color: var(--gold-dark);
    border-radius: 10px;
  }
  
  .content-tab {
    padding: 12px 20px;
    background: none;
    border: none;
    color: var(--white-dim);
    font-size: 1rem;
    cursor: pointer;
    transition: all var(--transition-speed) ease;
    white-space: nowrap;
  }
  
  .content-tab:hover {
    color: var(--gold);
  }
  
  .content-tab.active {
    color: var(--gold);
    border-bottom: 2px solid var(--gold);
  }
  
  .content-section {
    display: none;
  }
  
  .content-section.active {
    display: block;
  }
  
  .content-section-preview {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--gold-border);
  }
  
  .content-section-preview:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  
  .content-section-preview h4 {
    color: var(--gold);
    margin-bottom: 15px;
    font-size: 1.2rem;
  }
  
  .preview-item {
    display: flex;
    margin-bottom: 10px;
  }
  
  .preview-label {
    width: 150px;
    color: var(--white-dimmer);
    font-weight: 500;
  }
  
  .preview-value {
    flex: 1;
    color: var(--white);
  }
  
  .preview-image {
    max-width: 300px;
    max-height: 150px;
    border-radius: 5px;
    border: 1px solid var(--gold-border);
  }
  
  .preview-grid {
    display: grid;
