                                 <div class="form-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Te enviaremos la cotización a este correo">
                                     <i class="bi bi-question-circle"></i>
                                 </div>
                             </div>
                         </div>
                         <div class="col-md-6">
                             <div class="form-group">
                                 <i class="bi bi-telephone form-icon"></i>
                                 <input type="tel" class="form-control" id="phone" name="phone" placeholder="Teléfono" required data-validate="phone">
                                 <div class="form-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Formato: 10 dígitos sin espacios">
                                     <i class="bi bi-question-circle"></i>
                                 </div>
                             </div>
                         </div>
