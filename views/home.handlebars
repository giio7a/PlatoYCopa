<!-- Sección de Cotización -->
<section id="cotizacion" class="reservation-section">
  <div class="container">
      <h2 class="section-title gradient-text">Cotiza tu Servicio</h2>
      <p class="section-subtitle">Calcula el costo de tu evento y reserva al instante</p>
      
      <div class="row justify-content-center">
          <div class="col-lg-10">
              <div class="reservation-form">
                  <form id="quotationForm" action="/quote-form" method="POST" novalidate>
                      <!-- Información Personal -->
                      <div class="row mb-4">
                          <div class="col-12">
                              <h5 class="text-gold mb-3">Información Personal</h5>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <i class="bi bi-person form-icon"></i>
                                  <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Nombre completo" required data-validate="name">
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <i class="bi bi-envelope form-icon"></i>
                                  <input type="email" class="form-control" id="email" name="email" placeholder="Correo electrónico" required data-validate="email">
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <i class="bi bi-telephone form-icon"></i>
                                  <input type="tel" class="form-control" id="phone" name="phone" placeholder="Teléfono" required data-validate="phone">
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group date-picker-container">
                                  <i class="bi bi-calendar-event form-icon"></i>
                                  <label for="eventDate" class="date-label">
                                    <input type="date" class="form-control" id="eventDate" name="eventDate" placeholder="Fecha del evento" required min="{{currentDate}}">
                                    <span class="date-input-addon">
                                        <i class="bi bi-calendar-check"></i>
                                    </span>
                                  </label>
                                  <span class="date-helper-text">Haz clic para seleccionar fecha</span>
                              </div>
                          </div>
                      </div>

                      <!-- Detalles del Servicio -->
                      <div class="row mb-4">
                          <div class="col-12">
                              <h5 class="text-gold mb-3">Detalles del Servicio</h5>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <i class="bi bi-people form-icon"></i>
                                  <input type="number" id="numWaiters" name="numWaiters" class="form-control" placeholder="Número de meseros" min="1" required data-validate="number">
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <i class="bi bi-clock form-icon"></i>
                                  <select id="serviceDuration" name="serviceDuration" class="form-control" required>
                                      <option value="" selected disabled>Duración del servicio</option>
                                      <option value="6">6 horas ($350 por mesero)</option>
                                      <option value="8">8 horas ($450 por mesero)</option>
                                  </select>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <i class="bi bi-geo-alt form-icon"></i>
                                  <select id="serviceLocation" name="serviceLocation" class="form-control" required>
                                      <option value="" selected disabled>Ubicación del servicio</option>
                                      <option value="local">Local</option>
                                      <option value="foraneo">Foráneo (precio adicional)</option>
                                  </select>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <i class="bi bi-tags form-icon"></i>
                                  <select id="eventType" name="eventType" class="form-control" required>
                                      <option value="" selected disabled>Tipo de evento</option>
                                      {{#each tiposEventos}}
                                      <option value="{{id}}">{{nombre}}</option>
                                      {{/each}}
                                  </select>
                              </div>
                          </div>
                      </div>

                      <!-- Servicios Adicionales -->
                      <div class="row mb-4">
                          <div class="col-12">
                              <h5 class="text-gold mb-3">Servicios Adicionales</h5>
                          </div>
                          <div class="col-md-4">
                              <div class="service-option">
                                  <div class="form-check">
                                      <input class="form-check-input" type="checkbox" id="lavalozas" name="lavalozas">
                                      <label class="form-check-label" for="lavalozas">
                                          Lavalozas
                                          <span class="service-price">$300</span>
                                      </label>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-4">
                              <div class="service-option">
                                  <div class="form-check">
                                      <input class="form-check-input" type="checkbox" id="cuidaCoches" name="cuidaCoches">
                                      <label class="form-check-label" for="cuidaCoches">
                                          Cuidacoches
                                          <span class="service-price">$400</span>
                                      </label>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-4">
                              <div class="service-option">
                                  <div class="form-check">
                                      <input class="form-check-input" type="checkbox" id="montajeDesmontaje" name="montajeDesmontaje">
                                      <label class="form-check-label" for="montajeDesmontaje">
                                          Montaje y desmontaje
                                          <span class="service-price">$80 por mesero</span>
                                      </label>
                                  </div>
                              </div>
                          </div>
                      </div>
                      
                      <!-- Resultado de la Cotización -->
                      <div class="quotation-result">
                          <div class="row align-items-center">
                              <div class="col-md-7">
                                  <div class="quotation-details">
                                      <h5 class="text-gold">Detalles de la cotización:</h5>
                                      <ul id="quotationDetails" class="quotation-list">
                                          <li>Servicio base: <span id="baseServiceCost">$0.00</span></li>
                                          <li>Servicios adicionales: <span id="additionalServicesCost">$0.00</span></li>
                                          <li>Cargo por ubicación: <span id="locationCharge">$0.00</span></li>
                                      </ul>
                                  </div>
                              </div>
                              <div class="col-md-5">
                                  <div class="total-price">
                                      <h4>Total estimado:</h4>
                                      <div class="price-display" id="totalPrice">$0.00</div>
                                      <p class="price-note">*Precio aproximado, puede variar según la distancia en servicios foráneos</p>
                                  </div>
                              </div>
                          </div>
                      </div>

                      <!-- Botones de Acción -->
                      <div class="form-actions">
                          <div class="row">
                              <div class="col-md-6 mb-3 mb-md-0 mx-auto">
                                  <button type="button" id="saveQuotation" class="btn btn-gold w-100">
                                      <i class="bi bi-save me-2"></i>Guardar cotización
                                  </button>
                              </div>
                              <div class="col-md-6 mx-auto" id="reserveButtonContainer" style="display: none;">
                                  <a href="#" id="reserveButton" class="btn btn-custom w-100">
                                      <i class="bi bi-whatsapp me-2"></i>Reservar ahora
                                  </a>
                              </div>
                          </div>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</section>

