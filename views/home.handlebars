<!-- Servicios -->
<section id="servicios" class="services-section">
   <div class="container">
       <h2 class="section-title gradient-text">Nuestros Servicios</h2>
       <p class="section-subtitle">Experiencia y profesionalismo en cada momento de tu evento</p>
       
       <div class="row">
           {{#each services}}
               <div class="col-lg-3 col-md-6 mb-4">
                   <a href="/servicios/{{id}}" class="text-decoration-none service-link">
                       <div class="service-card interactive-card">
                           <div class="service-icon">
                               <i class="bi {{icono}}"></i>
                           </div>
                           <h5 class="service-title">{{titulo}}</h5>
                           <p class="service-description">{{descripcion_corta}}</p>
                       </div>
                   </a>
               </div>
           {{/each}}
       </div>
   </div>
</section>

<!-- Reseñas -->
<section class="reviews-section m-0" id="resenas">
   <div class="container">
       <h2 class="section-title gradient-text">Lo que dicen nuestros clientes</h2>
       <p class="section-subtitle">Testimonios de clientes satisfechos</p>
       
       <div class="row">
           {{#each reviews}}
           <div class="col-lg-4 col-md-6 mb-4">
               <a href="/resenas/{{id}}" class="text-decoration-none review-link">
                   <div class="review-card interactive-card">
                       <div class="review-header">
                           <div class="reviewer-info">
                               <h5>{{nombre_cliente}}</h5>
                               <span>{{fecha}}</span>
                           </div>
                           <div class="verified-badge">
                               {{#if verificado}}Verificado{{/if}}
                           </div>
                       </div>
                       <div class="review-stars">
                           {{#times calificacion}}★{{/times}}{{#times (subtract 5 calificacion)}}☆{{/times}}
                       </div>
                       <p class="review-text">
                           "{{comentario}}"
                       </p>
                       <div class="review-footer">
                           <span class="event-type">{{tipo_evento}}</span>
                       </div>
                   </div>
               </a>
           </div>
           {{/each}}
       </div>

       <!-- Botón para ver más reseñas -->
       <div class="text-center mt-4">
           <a href="/resenas" class="btn btn-gold">Ver más reseñas</a>
       </div>
   </div>
</section>

<!-- Estadísticas -->
<section class="stats-section">
   <div class="container">
       <div class="row">
           {{#each stats}}
           <div class="col-md-3 col-6 mb-4 mb-md-0">
               <div class="stat-card">
                   <div class="stat-icon">
                       <i class="bi {{icono}}"></i>
                   </div>
                   <div class="stat-number">{{numero}}</div>
                   <div class="stat-label">{{label}}</div>
               </div>
           </div>
           {{/each}}
       </div>
   </div>
</section>
<!-- Galería -->
<section class="gallery-section" id="galeria">
