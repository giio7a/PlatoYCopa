                                 <div class="form-check checkbox-container">
                                     <input class="form-check-input" type="checkbox" id="lavalozas" name="lavalozas">
                                     <label class="form-check-label" for="lavalozas">
                                         Lavalozas
                                         <span class="service-price">$300</span>
                                     </label>
                                     <div class="checkbox-tooltip" data-bs-toggle="tooltip" data-bs-placement="right" title="Personal dedicado a lavar la loza durante el evento">
                                         <i class="bi bi-question-circle"></i>
                                     </div>
                                 </div>
                             </div>
                         </div>
                         <div class="col-md-4">
                             <div class="service-option">
                                 <div class="form-check checkbox-container">
                                     <input class="form-check-input" type="checkbox" id="cuidaCoches" name="cuidaCoches">
                                     <label class="form-check-label" for="cuidaCoches">
                                         Cuidacoches
                                         <span class="service-price">$400</span>
                                     </label>
                                     <div class="checkbox-tooltip" data-bs-toggle="tooltip" data-bs-placement="right" title="Personal para vigilar y organizar los vehículos de tus invitados">
                                         <i class="bi bi-question-circle"></i>
                                     </div>
                                 </div>
                             </div>
                         </div>
                         <div class="col-md-4">
                             <div class="service-option">
                                 <div class="form-check checkbox-container">
                                     <input class="form-check-input" type="checkbox" id="montajeDesmontaje" name="montajeDesmontaje">
                                     <label class="form-check-label" for="montajeDesmontaje">
                                         Montaje y desmontaje
                                         <span class="service-price">$80 por mesero</span>
                                     </label>
                                     <div class="checkbox-tooltip" data-bs-toggle="tooltip" data-bs-placement="right" title="Incluye preparación del lugar antes del evento y limpieza posterior">
                                         <i class="bi bi-question-circle"></i>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                     
                     <!-- Resultado de la Cotización -->
                     <div class="quotation-result">
                         <div class="row align-items-center">
                             <div class="col-md-7">
                                 <div class="quotation-details">
                                     <h5 class="text-gold">Detalles de la cotización:</h5>
                                     <ul id="quotationDetails" class="quotation-list">
                                         <li>Servicio base: <span id="baseServiceCost">$0.00</span></li>
                                         <li>Servicios adicionales: <span id="additionalServicesCost">$0.00</span></li>
                                         <li>Cargo por ubicación: <span id="locationCharge">$0.00</span></li>
                                     </ul>
                                 </div>
                             </div>
                             <div class="col-md-5">
                                 <div class="total-price">
                                     <h4>Total estimado:</h4>
                                     <div class="price-display" id="totalPrice">$0.00</div>
                                     <p class="price-note">*Precio aproximado, puede variar según la distancia en servicios foráneos</p>
                                 </div>
                             </div>
                         </div>
                     </div>

                     <!-- Botones de Acción -->
                     <div class="form-actions">
                         <div class="row">
                             <div class="col-12">
                                 <a href="#" id="reserveButton" class="btn btn-gold w-100">
                                     <i class="bi bi-whatsapp me-2"></i>Reservar ahora
                                 </a>
                             </div>
                         </div>
                     </div>
                 </form>
             </div>
         </div>
     </div>
 </div>
</section>

