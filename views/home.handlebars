               <form action="/contact-form" method="POST" id="homeContactForm" novalidate>
                   <div class="form-group">
                       <i class="bi bi-person form-icon"></i>
                       <input type="text" name="name" class="form-control" placeholder="Nombre completo" required data-validate="name">
                   </div>
                   <div class="form-group">
                       <i class="bi bi-envelope form-icon"></i>
                       <input type="email" name="email" class="form-control" placeholder="Correo electrónico" required data-validate="email">
                   </div>
                   <div class="form-group">
                       <i class="bi bi-telephone form-icon"></i>
                       <input type="tel" name="phone" class="form-control" placeholder="Teléfono" required data-validate="phone">
                   </div>
                   <div class="form-group">
                       <i class="bi bi-tags form-icon"></i>
                       <select name="eventType" class="form-control" required>
                           <option value="" selected disabled>Tipo de Evento</option>
                           {{#each tiposEventos}}
                           <option value="{{id}}">{{nombre}}</option>
                           {{/each}}
                       </select>
                   </div>
                   <div class="form-group">
                       <i class="bi bi-chat-text form-icon"></i>
                       <textarea name="message" class="form-control" placeholder="Escribe tu mensaje..." required data-validate="message" rows="4"></textarea>
